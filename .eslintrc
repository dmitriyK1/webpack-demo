{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "global-require": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "mocha": true
  }
}
